<%= simple_form_for(@question) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :summary %>
    <%= f.input :category_id %>
    <%= f.input :mentor_id %>
    <%= f.input :vote %>
    <%= f.input :video_link %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
